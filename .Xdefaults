!##############################
!# rxvt-unicode configuration #
!##############################

URxvt.depth: 32
URxvt.geometry: 100x30
URxvt.iconFile: /usr/share/icons/hicolor/scalable/apps/Terminal.svg
URxvt.scrollBar: false

! Pretty bitmap font, fallback to TTF with very wide unicode coverage
URxvt.font: -*-termsyn-medium-r-*-*-11-*-*-*-*-*-*-*,xft:Code2000
URxvt.boldFont: -*-termsyn-bold-r-*-*-11-*-*-*-*-*-*-*,xft:Code2000:bold

URxvt.perl-ext-common: default,matcher
! Configure URL matcher: open in google-chrome when clicked with middle button
URxvt.urlLauncher: google-chrome
URxvt.matcher.button: 1


! Solarized colorscheme, from: https://github.com/altercation/solarized/
*background: #002b36
*foreground: #839496
*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground:#586e75
*pointerColorForeground:#93a1a1
!! black dark/light
*color0: #073642
*color8: #002b36
!! red dark/light
*color1: #dc322f
*color9: #cb4b16
!! green dark/light
*color2: #859900
*color10: #586e75
!! yellow dark/light
*color3: #b58900
*color11: #657b83
!! blue dark/light
*color4: #268bd2
*color12: #839496
!! magenta dark/light
*color5: #d33682
*color13: #6c71c4
!! cyan dark/light
*color6: #2aa198
*color14: #93a1a1
!! white dark/light
*color7: #eee8d5
*color15: #fdf6e3
