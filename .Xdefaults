!##############################
!# rxvt-unicode configuration #
!##############################

URxvt.depth: 32
URxvt.geometry: 100x30
URxvt.iconFile: /usr/share/icons/hicolor/scalable/apps/Terminal.svg
URxvt.scrollBar: false

! Pretty bitmap font, fallback to TTF with very wide unicode coverage
URxvt.font: -*-termsyn-medium-r-*-*-11-*-*-*-*-*-*-*,-*-fixed-medium-r-*-*-10-*-*-*-*-*-iso10646-1,xft:Code2000
URxvt.boldFont: -*-termsyn-bold-r-*-*-11-*-*-*-*-*-*-*,-*-fixed-medium-r-*-*-10-*-*-*-*-*-iso10646-1,xft:Code2000:bold

! Don't conflate boldness and brightness
URxvt.intensityStyles: false

URxvt.perl-ext-common: default,matcher
! Configure URL matcher: open in google-chrome when clicked with middle button
URxvt.url-launcher: google-chrome
URxvt.matcher.button: 1


! Solarized colorscheme, from: https://github.com/altercation/solarized/
URxvt.background: #002b36
URxvt.foreground: #839496
URxvt.fading: 40
URxvt.fadeColor: #002b36
URxvt.cursorColor: #93a1a1
URxvt.pointerColorBackground:#586e75
URxvt.pointerColorForeground:#93a1a1
!! black dark/light
URxvt.color0: #073642
URxvt.color8: #002b36
!! red dark/light
URxvt.color1: #dc322f
URxvt.color9: #cb4b16
!! green dark/light
URxvt.color2: #859900
URxvt.color10: #586e75
!! yellow dark/light
URxvt.color3: #b58900
URxvt.color11: #657b83
!! blue dark/light
URxvt.color4: #268bd2
URxvt.color12: #839496
!! magenta dark/light
URxvt.color5: #d33682
URxvt.color13: #6c71c4
!! cyan dark/light
URxvt.color6: #2aa198
URxvt.color14: #93a1a1
!! white dark/light
URxvt.color7: #eee8d5
URxvt.color15: #fdf6e3
